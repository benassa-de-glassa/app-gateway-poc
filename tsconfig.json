{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "outDir": "lib",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "tests"
  ],
}